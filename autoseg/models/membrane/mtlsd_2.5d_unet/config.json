{
	"model":{

		"name": "mtlsd_2.5d_unet",
		"params": {
			"in_channels": 1,
			"num_fmaps": 13,
			"fmap_inc_factor": 5,
			"downsample_factors": [[1, 2, 2], [1, 2, 2], [1, 2, 2]],
			"kernel_size_down": [
				[[3, 3, 3], [3, 3, 3]], 
				[[3, 3, 3], [3, 3, 3]], 
				[[1, 3, 3], [1, 3, 3]],
				[[1, 3, 3], [1, 3, 3]]
			],
			"kernel_size_up": [
				[[1, 3, 3], [1, 3, 3]],
				[[3, 3, 3], [3, 3, 3]], 
				[[3, 3, 3], [3, 3, 3]]
			],
			"activation": "ReLU",
			"num_fmaps_out": null,
			"num_heads": 2,
			"constant_upsample": true,
			"padding": "valid"
		},
		"optimizer": {
			"name": "Adam",
			"params": {
				"lr": 0.5e-4
			}
		},
		"output_shapes": [10,3],
		"input_shape": [24, 196, 196],
		"output_shape": [8, 104, 104],
		"default_voxel_size": [50, 8, 8]
	},
	"train":{
		"augmentations":{
			"elastic" : {
				"control_point_spacing": [2, 50, 50],
				"jitter_sigma": [0, 2, 2],
				"scale_interval": [0.6, 1.25],
				"subsample": 4
			},
			"simple": {
				"transpose_only": [1,2]
			},
			"noise": {},
			"intensity": {
				"scale_min": 0.9,
				"scale_max": 1.1,
				"shift_min": -0.1,
				"shift_max": 0.1
			},
			"blur": {
				"blur_range": [0.0,1.0]
			}
		},
		"nodes":{
			"AddLocalShapeDescriptors": {"sigma": 80},
			"AddAffinities": {
				"neighborhood" : [
					[-1, 0, 0],
					[0, -1, 0],
					[0, 0, -1]
				]
			},
			"BalanceLabels": {}
		}
	},
	"predict":{
		"keys":{
			"input": {
				"RAW": 1
			},
			"output": {
			    	"PRED_LSDS": 10,
			    	"PRED_AFFS": 3
			}
		}
	},
	"segment":{
		"method": "hierarchical"
	}
}
